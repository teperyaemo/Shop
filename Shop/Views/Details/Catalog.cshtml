@model Shop.ViewModels.DetailsListViewModel

@{
    ViewData["Title"] = "Каталог";
}
<main>
    <section class="py-5 text-center container">
        <div class="row py-lg-5">
            <div class="col-lg-6 col-md-8 mx-auto">
                <h1 class="fw-light">Детали</h1>
                <p class="lead text-muted">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Maecenas arcu ante, dignissim vel dictum ut, fringilla at velit. Mauris aliquet lorem sit amet nisi commodo, a mollis orci lobortis. Sed suscipit.</p>
                             
            </div>
            <form class="row col-lg-12" asp-controller="Details" asp-action="Catalog" method="get">
                    <select asp-for="currCategory" asp-items="Model.Categories" class="custom-select d-block col-lg-3">
                        <option value="" selected="selected">Все категории</option>
                    </select>
                    <div class="form-outline col-lg-8">
                        <input type="search" asp-for="SearchString" class="form-control" placeholder="Поиск"/>
                    </div>
                    <button type="submit" class="btn btn-primary col-lg-1">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-search h-100" viewBox="0 0 16 16">
                            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
                        </svg>
                    </button>
                </form>
        </div>
    </section>

    <div class="album py-5 bg-light">
        <div class="container">
            @if (Model.allDetails.Any())
            {
               <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                @foreach (var item in Model.allDetails)
                {
                    <div class="col">
                        <div class="card shadow-sm">
                            <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false">
                                <title>Placeholder</title>
                                <rect width="100%" height="100%" fill="#55595c"></rect>
                                <text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text>
                            </svg>

                            <div class="card-body">
                                <h3>@item.detailName</h3>
                                <p>Модель: @item.model</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <p><a class="btn btn-primary" asp-controller="ShopCart" asp-action="addToCart" asp-route-id="@item.detailId">Добавить в корзину</a></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                </div>
            }
            else
            {
                <h2>Похоже, что ничего по вашему запросу не нашлось...</h2>
            }
        </div>
    </div>

</main>

