@model ShopCartViewModel

@{
    ViewData["Title"] = "Корзина";
}


<div class="container">
    <h2>Корзина</h2>
    @if(Model.shopCart.listShopItems.Any())
    {
        @foreach (var item in Model.shopCart.listShopItems)
        { 
            <div class="card mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div class="d-flex flex-row align-items-center">
                            <div>
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-shopping-carts/img1.webp" class="img-fluid rounded-3" alt="Shopping item" style="width: 65px;">
                            </div>
                            <div class="ms-3">
                                <h5>@item.detail.detailName</h5>
                                <p class="small mb-0">"@item.detail.model</p>
                            </div>
                        </div>
                        <div class="d-flex flex-row align-items-center">   
                            <a style="color: #222222;" asp-controller="ShopCart" asp-action="deleteFromCart" asp-route-id="@item.Id">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 16 16">
  <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8 2.146 2.854Z"/>
</svg>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            
        }
        
        <hr/>
        <button class="btn btn-primary" asp-controller="Order" asp-action="Checkout">Заказать</button>

                        
    }
    else
    {
        <h3 class="mt-3">В вашей корзине отсутвуют товары...</h3>
    }

</div>
