@model Shop.ViewModels.DetailsListViewModel

@{
    ViewData["Title"] = "Detail";    
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}

<h1>Detail</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Admin" asp-action="Detail" method="get">
    <p>
        <select asp-for="currCategory" asp-items="Model.Categories">
            <option value="">All</option>
        </select>

        Название: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Поиск" />
    </p>
</form>

<table class="table">
   <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.allDetails.First().detailName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.allDetails.First().Category.categoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.allDetails.First().model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.allDetails.First().gost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.allDetails.First().drawingNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.allDetails)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.detailName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.categoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.gost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.drawingNumber)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.detailId">Edit</a> |
                    <a asp-action="DetailReview" asp-route-id="@item.detailId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.detailId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
